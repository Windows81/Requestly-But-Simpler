{
  "compilerOptions": {
    "outDir": "javascript",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "..",
    "paths": {
      "common/*": [
        "../common/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "javascript"
  ],
  "include": [
    "./src/**/*",
    "../common/src/*"
  ]
}